  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading font",
        "default": "playfair_display_n4"
      },
      {
        "type": "range",
        "id": "font_heading_scale",
        "label": "Heading font size scale",

        "default": "fade"
      },
      {
        "type": "range",
        "id": "animation_duration",
        "label": "Animation duration",
        "min": 200,
        "max": 1000,
        "step": 100,
        "default": 400,
        "unit": "ms"
      },
      {
        "type": "header",
        "content": "Hover effects"

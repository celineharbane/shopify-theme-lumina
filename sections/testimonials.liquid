        {
          "type": "testimonial",
          "settings": {
            "rating": 5,
            "quote": "The attention to detail is remarkable. You can tell they really care about their products and customers.",
            "author": "Emily K.",
            "author_title": "First-time Buyer"
          }
        }
      ]
    }
  ]
}
{% endschema %}

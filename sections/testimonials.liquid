      "options": [
        { "value": "slider", "label": "Slider (single)" },
        { "value": "grid", "label": "Grid" },
        { "value": "carousel", "label": "Carousel (marquee)" }
      ],
      "default": "slider"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Grid columns (desktop)",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "info": "Only applies to grid layout"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "checkbox",
      "id": "show_images",
      "label": "Show customer photos",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show star rating",
      "default": true
    },
    {
      "type": "header",
      "content": "Slider settings"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Change slides every",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5,
      "unit": "sec"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 50,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "This is the best product I've ever purchased. The quality is outstanding and the customer service was exceptional."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author name",
          "default": "Jane Smith"
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Author title/location",
          "default": "Verified Buyer"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Author photo"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Associated product (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial",
          "settings": {
            "rating": 5,
            "quote": "Absolutely love this product! It exceeded all my expectations. The quality is superb and shipping was incredibly fast.",
            "author": "Sarah M.",

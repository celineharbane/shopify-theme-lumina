          }
        },
        {
          "type": "testimonial",
          "settings": {
            "rating": 5,
            "quote": "I've been a customer for years and they never disappoint. This is my go-to store for all my needs.",
            "author": "Michael R.",
            "author_title": "Loyal Customer"
          }

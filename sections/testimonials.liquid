{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign color_scheme = section.settings.color_scheme
  assign layout = section.settings.layout
-%}

<section 
  id="Testimonials-{{ section.id }}"
  class="testimonials{% if color_scheme != 'none' %} color-scheme-{{ color_scheme }}{% endif %} layout-{{ layout }}"
  data-section-id="{{ section.id }}"
  data-section-type="testimonials"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="testimonials__container page-width">
    
    {%- if section.settings.title != blank or section.settings.subheading != blank -%}
      <div class="testimonials__header text-center" data-aos="fade-up">
        {%- if section.settings.subheading != blank -%}
          <p class="testimonials__subheading subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="testimonials__title h2">{{ section.settings.title }}</h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if layout == 'slider' -%}
      <testimonial-slider class="testimonials__slider" data-autoplay="{{ section.settings.autoplay }}" data-autoplay-speed="{{ section.settings.autoplay_speed }}">
        <div class="testimonials__slides">
          {%- for block in section.blocks -%}
            <div class="testimonials__slide{% if forloop.first %} is-active{% endif %}" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
              {%- render 'testimonial-card', block: block, show_image: section.settings.show_images, show_rating: section.settings.show_rating -%}
            </div>
          {%- endfor -%}
        </div>

        {%- if section.blocks.size > 1 -%}
          <div class="testimonials__navigation">
            <button type="button" class="testimonials__nav-button testimonials__nav-button--prev" aria-label="{{ 'accessibility.previous_slide' | t }}">
              {%- render 'icon-chevron-left' -%}
            </button>
            <div class="testimonials__dots">
              {%- for block in section.blocks -%}
                <button 
                  type="button" 
                  class="testimonials__dot{% if forloop.first %} is-active{% endif %}"
                  data-index="{{ forloop.index0 }}"
                  aria-label="{{ 'accessibility.go_to_slide' | t: num: forloop.index }}"
                ></button>
              {%- endfor -%}
            </div>
            <button type="button" class="testimonials__nav-button testimonials__nav-button--next" aria-label="{{ 'accessibility.next_slide' | t }}">
              {%- render 'icon-chevron-right' -%}
            </button>
          </div>
        {%- endif -%}
      </testimonial-slider>

    {%- elsif layout == 'grid' -%}
      <div class="testimonials__grid" style="--columns: {{ section.settings.columns }};">
        {%- for block in section.blocks -%}
          <div class="testimonials__item" data-aos="fade-up" data-aos-delay="{{ forloop.index0 | times: 100 }}" {{ block.shopify_attributes }}>
            {%- render 'testimonial-card', block: block, show_image: section.settings.show_images, show_rating: section.settings.show_rating -%}
          </div>
        {%- endfor -%}
      </div>

    {%- elsif layout == 'carousel' -%}
      <div class="testimonials__carousel">
        <div class="testimonials__track">
          {%- for block in section.blocks -%}
            <div class="testimonials__carousel-item" {{ block.shopify_attributes }}>
              {%- render 'testimonial-card', block: block, show_image: section.settings.show_images, show_rating: section.settings.show_rating, compact: true -%}
            </div>
          {%- endfor -%}
          {%- comment -%} Duplicate for infinite scroll {%- endcomment -%}
          {%- for block in section.blocks -%}
            <div class="testimonials__carousel-item" aria-hidden="true">
              {%- render 'testimonial-card', block: block, show_image: section.settings.show_images, show_rating: section.settings.show_rating, compact: true -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section section-testimonials",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Customer Reviews"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",

{{ 'section-image-with-text.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign image_position = section.settings.image_position
  assign content_position = section.settings.content_position
  assign image_width = section.settings.image_width
  assign color_scheme = section.settings.color_scheme
-%}

<section 
  id="ImageWithText-{{ section.id }}"
  class="image-with-text{% if color_scheme != 'none' %} color-scheme-{{ color_scheme }}{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="image-with-text"
>
  <div class="image-with-text__container page-width">
    <div class="image-with-text__grid image-position-{{ image_position }} image-width-{{ image_width }}">
      
      {%- comment -%} Image Column {%- endcomment -%}
      <div class="image-with-text__media" data-aos="fade-{% if image_position == 'left' %}right{% else %}left{% endif %}">
        <div class="image-with-text__media-wrapper{% if section.settings.image_shape != 'default' %} image-shape-{{ section.settings.image_shape }}{% endif %}">
          {%- if section.settings.image != blank -%}
            {%- liquid
              assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
              assign sizes = '(min-width: 990px) 50vw, 100vw'
            -%}
            {{
              section.settings.image
              | image_url: width: 1500
              | image_tag:
                loading: 'lazy',
                width: section.settings.image.width,
                height: image_height,
                sizes: sizes,
                widths: '375, 550, 750, 1100, 1500',
                class: 'image-with-text__image'
            }}
          {%- else -%}
            <div class="image-with-text__placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}

          {%- if section.settings.video_url != blank -%}
            <button 
              class="image-with-text__video-button"
              type="button"
              aria-label="{{ 'general.video.play' | t }}"
              data-video-url="{{ section.settings.video_url }}"
            >
              <span class="image-with-text__video-icon">
                {%- render 'icon-play' -%}
              </span>
            </button>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Content Column {%- endcomment -%}
      <div class="image-with-text__content content-position-{{ content_position }}" data-aos="fade-{% if image_position == 'left' %}left{% else %}right{% endif %}" data-aos-delay="100">
        <div class="image-with-text__content-inner">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'subheading' -%}
                {%- if block.settings.subheading != blank -%}
                  <p class="image-with-text__subheading subheading" {{ block.shopify_attributes }}>
                    {{ block.settings.subheading }}
                  </p>
                {%- endif -%}

              {%- when 'heading' -%}
                {%- if block.settings.heading != blank -%}
                  <{{ block.settings.heading_tag }} class="image-with-text__heading h2" {{ block.shopify_attributes }}>
                    {{ block.settings.heading }}
                  </{{ block.settings.heading_tag }}>
                {%- endif -%}

              {%- when 'text' -%}
                {%- if block.settings.text != blank -%}
                  <div class="image-with-text__text rte" {{ block.shopify_attributes }}>
                    {{ block.settings.text }}
                  </div>
                {%- endif -%}

              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <div class="image-with-text__button" {{ block.shopify_attributes }}>
                    <a 
                      href="{{ block.settings.button_link }}"
                      class="button{% if block.settings.button_style == 'secondary' %} button--secondary{% elsif block.settings.button_style == 'tertiary' %} button--tertiary{% endif %}"
                    >
                      {{ block.settings.button_label }}
                      {%- if block.settings.button_arrow -%}
                        <span class="button__arrow">{%- render 'icon-arrow-right' -%}</span>
                      {%- endif -%}
                    </a>
                  </div>
                {%- endif -%}

              {%- when 'icon_list' -%}
                <ul class="image-with-text__icon-list" {{ block.shopify_attributes }}>
                  {%- if block.settings.item_1 != blank -%}
                    <li class="image-with-text__icon-item">
                      {%- render 'icon-check' -%}
                      <span>{{ block.settings.item_1 }}</span>
                    </li>
                  {%- endif -%}
                  {%- if block.settings.item_2 != blank -%}
                    <li class="image-with-text__icon-item">
                      {%- render 'icon-check' -%}
                      <span>{{ block.settings.item_2 }}</span>
                    </li>
                  {%- endif -%}
                  {%- if block.settings.item_3 != blank -%}
                    <li class="image-with-text__icon-item">
                      {%- render 'icon-check' -%}
                      <span>{{ block.settings.item_3 }}</span>
                    </li>
                  {%- endif -%}
                  {%- if block.settings.item_4 != blank -%}
                    <li class="image-with-text__icon-item">
                      {%- render 'icon-check' -%}
                      <span>{{ block.settings.item_4 }}</span>
                    </li>
                  {%- endif -%}
                </ul>

              {%- when 'custom_liquid' -%}
                <div class="image-with-text__custom" {{ block.shopify_attributes }}>
                  {{ block.settings.custom_liquid }}
                </div>

            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with text",
  "tag": "section",
  "class": "section section-image-with-text",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": ["youtube", "vimeo"],
      "label": "Video URL",
      "info": "Shows play button over image"
    },
    {
      "type": "select",
      "id": "image_shape",
      "label": "Image shape",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "rounded", "label": "Rounded" },
        { "value": "arch", "label": "Arch" },
        { "value": "blob", "label": "Blob" }
      ],
      "default": "default"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "image_width",
      "label": "Image width",
      "options": [
        { "value": "small", "label": "Small (40%)" },
        { "value": "medium", "label": "Medium (50%)" },
        { "value": "large", "label": "Large (60%)" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content alignment",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" },
        { "value": "accent", "label": "Accent" }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 50,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "subheading",
      "name": "Subheading",
      "settings": [
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Our Story"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Crafted with passion"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "Heading tag",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" },
            { "value": "h4", "label": "H4" },
            { "value": "p", "label": "Paragraph" }
          ],
          "default": "h2"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Description",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "secondary", "label": "Secondary" },
            { "value": "tertiary", "label": "Tertiary (link)" }
          ],
          "default": "primary"
        },
        {
          "type": "checkbox",
          "id": "button_arrow",
          "label": "Show arrow",
          "default": false
        }
      ]
    },
    {
      "type": "icon_list",
      "name": "Icon list",
      "settings": [
        {
          "type": "text",
          "id": "item_1",
          "label": "Item 1",
          "default": "Free shipping worldwide"
        },
        {
          "type": "text",
          "id": "item_2",
          "label": "Item 2",
          "default": "30-day money back guarantee"
        },
        {
          "type": "text",
          "id": "item_3",
          "label": "Item 3",
          "default": "Sustainable materials"
        },
        {
          "type": "text",
          "id": "item_4",
          "label": "Item 4"
        }
      ]
    },
    {
      "type": "custom_liquid",
      "name": "Custom Liquid",
      "settings": [
        {
          "type": "liquid",
          "id": "custom_liquid",
          "label": "Custom Liquid"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text",
      "blocks": [
        { "type": "subheading" },
        { "type": "heading" },
        { "type": "text" },
        { "type": "button" }
      ]
    }
  ]
}
{% endschema %}

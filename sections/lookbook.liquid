{%- comment -%}
  LUMINA Theme - Lookbook Section
  Ritual-inspired luxury magazine editorial layout
{%- endcomment -%}

{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-animations.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign collection = section.settings.collection
  assign layout_style = section.settings.layout_style
-%}

<section
  class="lookbook section-padding{% if section.settings.full_width %} lookbook--full-width{% endif %}"
  data-section-id="{{ section.id }}"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="{% unless section.settings.full_width %}page-width{% endunless %}">

    {%- comment -%} Section Header {%- endcomment -%}
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="lookbook__header" data-animate="fade-up">
        {%- if section.settings.subheading != blank -%}
          <span class="lookbook__subheading">{{ section.settings.subheading }}</span>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h2 class="lookbook__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="lookbook__description">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- comment -%} Lookbook Grid {%- endcomment -%}
    <div class="lookbook__grid lookbook__grid--{{ layout_style }}" data-animate-stagger>
      {%- for block in section.blocks -%}
        {%- case block.type -%}

          {%- when 'image' -%}
            <div
              class="lookbook__item lookbook__item--image{% if block.settings.large %} lookbook__item--large{% endif %}"
              {{ block.shopify_attributes }}
              data-animate="reveal"
            >
              <div class="lookbook__media image-hover-zoom">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 1200 | image_tag:
                    loading: 'lazy',
                    sizes: '(min-width: 990px) 50vw, 100vw',
                    widths: '400, 600, 800, 1000, 1200',
                    class: 'lookbook__image'
                  }}
                {%- else -%}
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'lookbook__placeholder' }}
                {%- endif -%}

                {%- if block.settings.caption != blank or block.settings.link != blank -%}
                  <div class="lookbook__caption">
                    {%- if block.settings.caption != blank -%}
                      <p class="lookbook__caption-text">{{ block.settings.caption }}</p>
                    {%- endif -%}
                    {%- if block.settings.link != blank -%}
                      <a href="{{ block.settings.link }}" class="lookbook__caption-link">
                        {{ block.settings.link_text | default: 'Shop Now' }}
                        {%- render 'icon-arrow-right' -%}
                      </a>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>
            </div>

          {%- when 'product' -%}
            <div
              class="lookbook__item lookbook__item--product{% if block.settings.large %} lookbook__item--large{% endif %}"
              {{ block.shopify_attributes }}
              data-animate="fade-up"
            >
              {%- if block.settings.product != blank -%}
                {%- render 'product-card',
                  product: block.settings.product,
                  show_vendor: section.settings.show_vendor,
                  class: 'product-card--ritual'
                -%}
              {%- else -%}
                {%- render 'product-card-placeholder' -%}
              {%- endif -%}
            </div>

          {%- when 'text' -%}
            <div
              class="lookbook__item lookbook__item--text{% if block.settings.large %} lookbook__item--large{% endif %}"
              {{ block.shopify_attributes }}
              data-animate="fade-up"
            >
              <div class="lookbook__text-content">
                {%- if block.settings.eyebrow != blank -%}
                  <span class="lookbook__eyebrow">{{ block.settings.eyebrow }}</span>
                {%- endif -%}
                {%- if block.settings.title != blank -%}
                  <h3 class="lookbook__text-title">{{ block.settings.title }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="lookbook__text-body">{{ block.settings.text }}</div>
                {%- endif -%}
                {%- if block.settings.button_link != blank -%}
                  <a href="{{ block.settings.button_link }}" class="lookbook__text-button button button--secondary">
                    {{ block.settings.button_text | default: 'Discover' }}
                  </a>
                {%- endif -%}
              </div>
            </div>

          {%- when 'quote' -%}
            <div
              class="lookbook__item lookbook__item--quote{% if block.settings.large %} lookbook__item--large{% endif %}"
              {{ block.shopify_attributes }}
              data-animate="fade-up"
            >
              <blockquote class="lookbook__quote">
                <p class="lookbook__quote-text">"{{ block.settings.quote }}"</p>
                {%- if block.settings.author != blank -%}
                  <cite class="lookbook__quote-author">â€” {{ block.settings.author }}</cite>
                {%- endif -%}
              </blockquote>
            </div>

        {%- endcase -%}
      {%- endfor -%}

      {%- comment -%} Collection Products {%- endcomment -%}
      {%- if collection != blank and section.settings.show_collection_products -%}
        {%- for product in collection.products limit: section.settings.products_limit -%}
          <div class="lookbook__item lookbook__item--product" data-animate="fade-up">
            {%- render 'product-card', product: product, show_vendor: section.settings.show_vendor, class: 'product-card--ritual' -%}
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>

    {%- comment -%} View Collection CTA {%- endcomment -%}
    {%- if section.settings.show_cta and collection != blank -%}
      <div class="lookbook__footer" data-animate="fade-up">
        <a href="{{ collection.url }}" class="lookbook__cta button button--primary button-luxury">
          {{ section.settings.cta_text | default: 'View Collection' }}
        </a>
      </div>
    {%- endif -%}

  </div>
</section>

<style>
.lookbook {
  position: relative;
}

.lookbook--full-width .lookbook__grid {
  padding: 0;
}

.lookbook__header {
  text-align: center;
  max-width: 700px;
  margin: 0 auto 5rem;
}

.lookbook__subheading {
  display: block;
  font-size: 1.1rem;
  text-transform: uppercase;
  letter-spacing: 0.3em;
  color: var(--color-accent);
  margin-bottom: 1.5rem;
}

.lookbook__heading {
  font-family: var(--font-heading-family);
  font-size: clamp(3rem, 5vw, 5rem);
  font-weight: 400;
  line-height: 1.1;
  letter-spacing: -0.02em;
  margin: 0 0 1.5rem;
}

.lookbook__description {
  font-size: 1.125rem;
  line-height: 1.7;
  color: var(--color-text-light);
}

/* Grid Layouts */
.lookbook__grid {
  display: grid;
  gap: 2px;
}

.lookbook__grid--editorial {
  grid-template-columns: repeat(12, 1fr);
  gap: 2rem;
}

.lookbook__grid--masonry {
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.lookbook__grid--asymmetric {
  grid-template-columns: 2fr 1fr;
  grid-auto-rows: minmax(300px, auto);
  gap: 2rem;
}

.lookbook__grid--minimal {
  grid-template-columns: repeat(2, 1fr);
  gap: 4rem;
}

/* Item Sizing */
.lookbook__grid--editorial .lookbook__item {
  grid-column: span 4;
}

.lookbook__grid--editorial .lookbook__item--large {
  grid-column: span 8;
}

.lookbook__grid--asymmetric .lookbook__item--large {
  grid-row: span 2;
}

/* Item Styles */
.lookbook__item {
  position: relative;
  overflow: hidden;
}

.lookbook__media {
  position: relative;
  height: 100%;
  min-height: 400px;
}

.lookbook__image,
.lookbook__placeholder {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.lookbook__caption {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 3rem;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, transparent 100%);
  color: white;
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.4s ease, transform 0.4s ease;
}

.lookbook__item:hover .lookbook__caption {
  opacity: 1;
  transform: translateY(0);
}

.lookbook__caption-text {
  font-family: var(--font-heading-family);
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.lookbook__caption-link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 1.1rem;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  color: white;
  text-decoration: none;
}

.lookbook__caption-link svg {
  width: 1.2rem;
  height: 1.2rem;
  transition: transform 0.3s ease;
}

.lookbook__caption-link:hover svg {
  transform: translateX(5px);
}

/* Text Block */
.lookbook__item--text {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-background-secondary);
  padding: 4rem;
  text-align: center;
}

.lookbook__text-content {
  max-width: 400px;
}

.lookbook__eyebrow {
  display: block;
  font-size: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.25em;
  color: var(--color-accent);
  margin-bottom: 1.5rem;
}

.lookbook__text-title {
  font-family: var(--font-heading-family);
  font-size: 2.5rem;
  font-weight: 400;
  line-height: 1.2;
  margin-bottom: 1.5rem;
}

.lookbook__text-body {
  color: var(--color-text-light);
  line-height: 1.7;
  margin-bottom: 2rem;
}

.lookbook__text-button {
  border-radius: 0;
  padding: 1.4rem 3rem;
  letter-spacing: 0.15em;
}

/* Quote Block */
.lookbook__item--quote {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-primary);
  color: var(--color-button-text);
  padding: 4rem;
  text-align: center;
}

.lookbook__quote {
  max-width: 500px;
}

.lookbook__quote-text {
  font-family: var(--font-heading-family);
  font-size: 2rem;
  font-style: italic;
  line-height: 1.4;
  margin-bottom: 1.5rem;
}

.lookbook__quote-author {
  font-size: 1.1rem;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-style: normal;
  opacity: 0.8;
}

/* Footer CTA */
.lookbook__footer {
  text-align: center;
  margin-top: 4rem;
}

.lookbook__cta {
  border-radius: 0;
  padding: 1.6rem 4rem;
  letter-spacing: 0.15em;
}

/* Responsive */
@media screen and (max-width: 989px) {
  .lookbook__grid--editorial,
  .lookbook__grid--masonry,
  .lookbook__grid--asymmetric {
    grid-template-columns: repeat(2, 1fr);
  }

  .lookbook__grid--editorial .lookbook__item,
  .lookbook__grid--editorial .lookbook__item--large {
    grid-column: span 1;
  }

  .lookbook__media {
    min-height: 300px;
  }
}

@media screen and (max-width: 749px) {
  .lookbook__grid--editorial,
  .lookbook__grid--masonry,
  .lookbook__grid--asymmetric,
  .lookbook__grid--minimal {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .lookbook__header {
    margin-bottom: 3rem;
  }

  .lookbook__item--text,
  .lookbook__item--quote {
    padding: 3rem 2rem;
  }

  .lookbook__caption {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

{% schema %}

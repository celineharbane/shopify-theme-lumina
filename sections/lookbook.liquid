        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text",
          "default": "Shop Now"
        },
        {
          "type": "checkbox",
          "id": "large",
          "label": "Large size",
          "default": false
        }
      ]
    },
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "large",
          "label": "Large size",
          "default": false
        }
      ]
    },
    {
      "type": "text",
      "name": "Text block",
      "settings": [
        {
          "type": "text",
          "id": "eyebrow",
          "label": "Eyebrow text",
          "default": "The Story"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Timeless Elegance"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Crafted with precision and designed for the modern connoisseur.</p>"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Discover"
        },
        {
          "type": "checkbox",
          "id": "large",
          "label": "Large size",
          "default": false
        }
      ]
    },
    {
      "type": "quote",
      "name": "Quote",
      "settings": [
        {
          "type": "text",
          "id": "quote",
          "label": "Quote",
          "default": "Fashion is the armor to survive the reality of everyday life."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Bill Cunningham"
        },
        {
          "type": "checkbox",
          "id": "large",
          "label": "Large size",
          "default": false
        }
      ]
    }
  ],
  "presets": [

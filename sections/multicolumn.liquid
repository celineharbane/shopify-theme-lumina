{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile
  assign image_ratio = section.settings.image_ratio
  assign color_scheme = section.settings.color_scheme
  assign text_alignment = section.settings.text_alignment
-%}

<section 
  id="Multicolumn-{{ section.id }}"
  class="multicolumn{% if color_scheme != 'none' %} color-scheme-{{ color_scheme }}{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="multicolumn"
  style="
    --columns-desktop: {{ columns_desktop }};
    --columns-mobile: {{ columns_mobile }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="multicolumn__container page-width">
    
    {%- if section.settings.title != blank or section.settings.subheading != blank -%}
      <div class="multicolumn__header text-{{ section.settings.header_alignment }}" data-aos="fade-up">
        {%- if section.settings.subheading != blank -%}
          <p class="multicolumn__subheading subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="multicolumn__title h2">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <div class="multicolumn__description rte">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="multicolumn__grid">
      {%- for block in section.blocks -%}
        <div 
          class="multicolumn__item text-{{ text_alignment }}"
          data-aos="fade-up"
          data-aos-delay="{{ forloop.index0 | times: 100 }}"
          {{ block.shopify_attributes }}
        >
          {%- case block.type -%}
            
            {%- when 'column' -%}
              <div class="multicolumn__card">
                {%- if block.settings.image != blank -%}
                  <div class="multicolumn__media image-ratio-{{ image_ratio }}">
                    {%- liquid
                      assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio
                    -%}
                    {{
                      block.settings.image
                      | image_url: width: 800
                      | image_tag:
                        loading: 'lazy',
                        width: block.settings.image.width,
                        height: image_height,
                        sizes: '(min-width: 990px) 25vw, (min-width: 750px) 50vw, 100vw',
                        widths: '275, 375, 550, 750, 800',
                        class: 'multicolumn__image'
                    }}
                  </div>
                {%- elsif block.settings.icon != 'none' -%}
                  <div class="multicolumn__icon">
                    {%- case block.settings.icon -%}
                      {%- when 'truck' -%}{%- render 'icon-truck' -%}
                      {%- when 'return' -%}{%- render 'icon-return' -%}
                      {%- when 'shield' -%}{%- render 'icon-shield' -%}
                      {%- when 'phone' -%}{%- render 'icon-phone' -%}
                      {%- when 'heart' -%}{%- render 'icon-heart' -%}
                      {%- when 'star' -%}{%- render 'icon-star' -%}
                      {%- when 'box' -%}{%- render 'icon-box' -%}
                      {%- when 'gift' -%}{%- render 'icon-gift' -%}
                    {%- endcase -%}
                  </div>
                {%- endif -%}

                <div class="multicolumn__content">
                  {%- if block.settings.title != blank -%}
                    <h3 class="multicolumn__item-title h4">{{ block.settings.title }}</h3>
                  {%- endif -%}
                  
                  {%- if block.settings.text != blank -%}
                    <div class="multicolumn__text rte">{{ block.settings.text }}</div>
                  {%- endif -%}
                  
                  {%- if block.settings.link_label != blank -%}
                    <a href="{{ block.settings.link_url }}" class="multicolumn__link link-underline">
                      {{ block.settings.link_label }}
                      <span class="multicolumn__link-arrow">{%- render 'icon-arrow-right' -%}</span>
                    </a>
                  {%- endif -%}
                </div>
              </div>

            {%- when 'icon_column' -%}
              <div class="multicolumn__card multicolumn__card--icon">
                <div class="multicolumn__icon-wrapper {% if block.settings.icon_style == 'circle' %}icon-style-circle{% elsif block.settings.icon_style == 'square' %}icon-style-square{% endif %}">
                  {%- if block.settings.custom_icon != blank -%}
                    <img 
                      src="{{ block.settings.custom_icon | image_url: width: 100 }}" 
                      alt="" 
                      width="48" 
                      height="48"
                      loading="lazy"
                      class="multicolumn__custom-icon"
                    >
                  {%- else -%}
                    {%- case block.settings.icon -%}
                      {%- when 'truck' -%}{%- render 'icon-truck' -%}
                      {%- when 'return' -%}{%- render 'icon-return' -%}
                      {%- when 'shield' -%}{%- render 'icon-shield' -%}
                      {%- when 'phone' -%}{%- render 'icon-phone' -%}
                      {%- when 'heart' -%}{%- render 'icon-heart' -%}
                      {%- when 'star' -%}{%- render 'icon-star' -%}
                      {%- when 'box' -%}{%- render 'icon-box' -%}
                      {%- when 'gift' -%}{%- render 'icon-gift' -%}
                    {%- endcase -%}
                  {%- endif -%}
                </div>

                <div class="multicolumn__content">
                  {%- if block.settings.title != blank -%}
                    <h3 class="multicolumn__item-title h4">{{ block.settings.title }}</h3>
                  {%- endif -%}
                  
                  {%- if block.settings.text != blank -%}
                    <div class="multicolumn__text rte">{{ block.settings.text }}</div>
                  {%- endif -%}
                </div>
              </div>

            {%- when 'number_column' -%}
              <div class="multicolumn__card multicolumn__card--number">
                {%- if block.settings.number != blank -%}
                  <div class="multicolumn__number">
                    <span class="multicolumn__number-value" data-count-to="{{ block.settings.number | remove: ',' | remove: '+' | remove: '%' | remove: '$' | remove: 'â‚¬' }}">
                      {{ block.settings.number }}
                    </span>
                    {%- if block.settings.number_suffix != blank -%}
                      <span class="multicolumn__number-suffix">{{ block.settings.number_suffix }}</span>
                    {%- endif -%}
                  </div>
                {%- endif -%}

                <div class="multicolumn__content">
                  {%- if block.settings.title != blank -%}
                    <h3 class="multicolumn__item-title h4">{{ block.settings.title }}</h3>
                  {%- endif -%}
                  
                  {%- if block.settings.text != blank -%}
                    <div class="multicolumn__text rte">{{ block.settings.text }}</div>
                  {%- endif -%}
                </div>
              </div>

          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.button_label != blank -%}
      <div class="multicolumn__footer text-center" data-aos="fade-up">
        <a href="{{ section.settings.button_link }}" class="button">
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}

  </div>
</section>


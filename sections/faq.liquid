{{ 'section-faq.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign color_scheme = section.settings.color_scheme
-%}

<section 
  id="FAQ-{{ section.id }}"
  class="faq{% if color_scheme != 'none' %} color-scheme-{{ color_scheme }}{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="faq"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="faq__container page-width">
    
    <div class="faq__layout{% if section.settings.layout == 'split' %} faq__layout--split{% endif %}">
      
      {%- if section.settings.title != blank or section.settings.subheading != blank or section.settings.text != blank -%}
        <div class="faq__header{% if section.settings.layout == 'centered' %} text-center{% endif %}" data-aos="fade-up">
          {%- if section.settings.subheading != blank -%}
            <p class="faq__subheading subheading">{{ section.settings.subheading }}</p>
          {%- endif -%}
          {%- if section.settings.title != blank -%}
            <h2 class="faq__title h2">{{ section.settings.title }}</h2>
          {%- endif -%}
          {%- if section.settings.text != blank -%}
            <div class="faq__text rte">{{ section.settings.text }}</div>
          {%- endif -%}
          {%- if section.settings.contact_text != blank -%}
            <div class="faq__contact">
              <p>{{ section.settings.contact_text }}</p>
              {%- if section.settings.contact_link != blank -%}
                <a href="{{ section.settings.contact_link }}" class="button button--secondary">
                  {{ section.settings.contact_label | default: 'Contact Us' }}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}

      <div class="faq__content">
        <div class="faq__accordion" role="list">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              
              {%- when 'question' -%}
                <accordion-item 
                  class="faq__item"
                  data-aos="fade-up"
                  data-aos-delay="{{ forloop.index0 | times: 50 }}"
                  {% if section.settings.open_first and forloop.first %}open{% endif %}
                  {{ block.shopify_attributes }}
                >
                  <h3 class="faq__question">
                    <button
                      type="button"
                      class="faq__question-button"
                      aria-expanded="{% if section.settings.open_first and forloop.first %}true{% else %}false{% endif %}"
                      aria-controls="FAQ-Answer-{{ section.id }}-{{ block.id }}"
                    >
                      <span class="faq__question-text">{{ block.settings.question }}</span>
                      <span class="faq__question-icon">
                        {%- render 'icon-plus' -%}
                      </span>
                    </button>
                  </h3>
                  <div 
                    id="FAQ-Answer-{{ section.id }}-{{ block.id }}"
                    class="faq__answer"
                    role="region"
                    aria-labelledby="FAQ-Question-{{ section.id }}-{{ block.id }}"
                    {% unless section.settings.open_first and forloop.first %}hidden{% endunless %}
                  >
                    <div class="faq__answer-inner rte">
                      {{ block.settings.answer }}
                    </div>
                  </div>
                </accordion-item>

              {%- when 'heading' -%}
                <div class="faq__category-heading" data-aos="fade-up" {{ block.shopify_attributes }}>
                  <h3 class="h4">{{ block.settings.heading }}</h3>
                </div>

            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>

    </div>
  </div>
</section>

<script>
  if (!customElements.get('accordion-item')) {
    class AccordionItem extends HTMLElement {
      constructor() {
        super();
        this.button = this.querySelector('button');
        this.content = this.querySelector('.faq__answer');
        this.button?.addEventListener('click', this.toggle.bind(this));
      }

      toggle() {
        const isOpen = this.hasAttribute('open');
        
        if (isOpen) {
          this.close();
        } else {
          // Close other items if single open mode
          const parent = this.closest('.faq__accordion');
          const singleOpen = parent?.closest('[data-single-open="true"]');
          if (singleOpen) {
            parent.querySelectorAll('accordion-item[open]').forEach(item => {
              if (item !== this) item.close();
            });
          }
          this.open();
        }
      }

      open() {
        this.setAttribute('open', '');
        this.button.setAttribute('aria-expanded', 'true');
        this.content.hidden = false;
        this.content.style.height = '0px';
        this.content.style.height = this.content.scrollHeight + 'px';
        
        this.content.addEventListener('transitionend', () => {
          this.content.style.height = 'auto';
        }, { once: true });
      }

      close() {
        this.content.style.height = this.content.scrollHeight + 'px';
        requestAnimationFrame(() => {
          this.content.style.height = '0px';
        });
        
        this.content.addEventListener('transitionend', () => {
          this.removeAttribute('open');
          this.button.setAttribute('aria-expanded', 'false');
          this.content.hidden = true;
          this.content.style.height = '';
        }, { once: true });
      }
    }
    customElements.define('accordion-item', AccordionItem);
  }
</script>

{% schema %}
{

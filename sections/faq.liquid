  "tag": "section",
  "class": "section section-faq",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Have Questions?"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Contact block"
    },
    {
      "type": "textarea",
      "id": "contact_text",
      "label": "Contact text",
      "default": "Can't find what you're looking for?"
    },
    {
      "type": "url",
      "id": "contact_link",
      "label": "Contact link"
    },
    {
      "type": "text",
      "id": "contact_label",
      "label": "Contact button label",
      "default": "Contact Us"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "centered", "label": "Centered" },
        { "value": "split", "label": "Split (header left)" }
      ],
      "default": "centered"
    },
    {
      "type": "checkbox",
      "id": "open_first",
      "label": "Open first item by default",
      "default": true
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 50,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your return policy?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>We offer a 30-day return policy on all items. Products must be unused and in their original packaging. Contact our support team to initiate a return.</p>"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Category heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Shipping"
        }
      ]
    }
  ],
  "presets": [
    {
